{
  "rules": {
    "profiles": {
      "$user_id": {
        ".read": "$user_id === auth.uid",
        ".write": "$user_id === auth.uid"
      }
    },
    "rooms": {
      ".read": "auth.uid !== null",
      "$room_id": {
        ".read": "auth.uid !== null",
        ".write": "!data.exists()|| data.child('admins').child(auth.uid).val()==true"
      },

      "lastMessage": {
        ".write": "auth.uid !== null"
      }
    },
    "messages": {
      ".read": "auth.uid !== null",
      ".write": "auth.uid !== null",
      ".indexOn": "roomId",
      "$message_id": {
        ".read": "auth.uid !== null",
        ".write": "auth.uid !== null"
      }
    },
    "status": {
      "$user_id": {
        ".read": "auth.uid !== null",
        ".write": "$user_id === auth.uid"
      }
    },
    ".read": false,
    ".write": false
  }
}
